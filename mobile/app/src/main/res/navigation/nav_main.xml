<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main.xml"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.lacuc.pets.ui.login.signup.SignUpFragment"
        android:label="회원가입"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.lacuc.pets.ui.login.signin.SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_chooseGroupFragment"
            app:destination="@id/chooseGroupFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/chooseGroupFragment"
        android:name="com.lacuc.pets.ui.group.ChooseGroupFragment"
        android:label="Group"
        tools:layout="@layout/fragment_choose_group">
        <action
            android:id="@+id/action_chooseGroupFragment_to_addGroupFragment"
            app:destination="@id/addGroupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/addGroupFragment"
        android:name="com.lacuc.pets.ui.group.AddGroupFragment"
        android:label="{toolbar_title}"
        tools:layout="@layout/fragment_add_group">
        <argument
            android:name="toolbar_title"
            app:argType="string" />
    </fragment>

</navigation>